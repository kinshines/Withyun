@model IPagedList<Recomment>

@{
    ViewBag.Title = "首页推荐";
}

<div class="row">
    <div class="col-md-12">
        <div class="widget-container fluid-height clearfix">
            <div class="widget-content padded clearfix">
                @using (Html.BeginForm("Manage", "Recomment", FormMethod.Get, new { @class = "form-horizontal" }))
                {
                    <div class="form-group">
                        <label class="control-label col-md-1">标题</label>
                        <div class="col-md-5">
                            @Html.TextBox("recommentTitle", ViewBag.RecommentTitle as string, new { @class = "form-control", placeholder = "请输入标题" })
                            @Html.Hidden("category", "RecommentCategory")
                        </div>
                        <div class="col-md-5">
                            <button class="btn btn-primary" type="submit"><i class="fa fa-search"></i>搜索</button>
                            <a href="@Url.Action("Create")" class="btn btn-success"><i class="fa fa-plus"></i>添加推荐</a>
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.ActionLink("剧集", "Manage", new { category = RecommentCategory.剧集 }, new { @class = "btn btn-info" })
                        @Html.ActionLink("电影", "Manage", new { category = RecommentCategory.电影 }, new { @class = "btn btn-info" })
                        @Html.ActionLink("美剧", "Manage", new { category = RecommentCategory.美剧 }, new { @class = "btn btn-info" })
                        @Html.ActionLink("韩剧", "Manage", new { category = RecommentCategory.韩剧 }, new { @class = "btn btn-info" })
                        @Html.ActionLink("日剧", "Manage", new { category = RecommentCategory.日剧 }, new { @class = "btn btn-info" })
                        @Html.ActionLink("动漫", "Manage", new { category = RecommentCategory.动漫 }, new { @class = "btn btn-info" })
                        @Html.ActionLink("音乐", "Manage", new { category = RecommentCategory.音乐 }, new { @class = "btn btn-info" })
                        @Html.ActionLink("游戏", "Manage", new { category = RecommentCategory.游戏 }, new { @class = "btn btn-info" })
                        @Html.ActionLink("图书", "Manage", new { category = RecommentCategory.图书 }, new { @class = "btn btn-info" })
                        @Html.ActionLink("综艺", "Manage", new { category = RecommentCategory.综艺 }, new { @class = "btn btn-info" })
                        @Html.ActionLink("软件", "Manage", new { category = RecommentCategory.软件 }, new { @class = "btn btn-info" })
                        @Html.ActionLink("资料", "Manage", new { category = RecommentCategory.资料 }, new { @class = "btn btn-info" })
                        @Html.ActionLink("教育", "Manage", new { category = RecommentCategory.教育 }, new { @class = "btn btn-info" })
                    </div>
                }
                <hr />
                <table class="table table-striped table-hover">
                    <tr>
                        <th>
                            标题
                        </th>
                        <th>
                            封面
                        </th>
                        <th width="10%">
                            时间
                        </th>
                        <th width="20%">
                            操作
                        </th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        var trClass = item.Top ? "success" : "";
                        <tr data-id="@item.Id" class="@trClass">
                            <td>
                                @Html.ActionLink(item.Title, "Details", "Blog", new { id = item.BlogId }, new { target = "_blank" })
                            </td>
                            <td>
                                <img src="@item.CoverUrl" />
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TimeStamp, "DateMinute")
                            </td>
                            <td>
                                @if (item.Top)
                                {
                                    <a href="javascript:cancelTopRecomment('@item.Id')">取消置顶</a>
                                }
                                else
                                {
                                    <a href="javascript:topRecomment('@item.Id')">置顶</a>
                                }

                                |<a href="javascript:deleteRecomment('@item.Id')">删除</a>
                            </td>
                        </tr>
                    }
                </table>
                第 @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) 页，共 @Model.PageCount 页

                @Html.PagedListPager(Model, page => Url.Action("Manage",
                    new
                    {
                        page,
                        category = ViewBag.RecommentCategory,
                        recommentTitle = ViewBag.RecommentTitle
                    }))
            </div>
        </div>
    </div>
</div>