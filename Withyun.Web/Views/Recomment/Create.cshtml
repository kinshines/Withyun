@model Recomment

@{
    ViewBag.Title = "新增推荐";
}
<div class="row">
    <div class="col-md-12">
        <div class="widget-container fluid-height clearfix">
            <div class="heading">
                <i class="fa fa-bars"></i>@ViewBag.Title
            </div>
            <hr />
            <div class="widget-content padded">
                <form asp-controller="Recomment" asp-action="Create" method="post" class="form-horizontal" enctype="multipart/form-data">
                    <div class="form-horizontal">
                        <p class="text-success">@ViewBag.Message</p>
                        <div asp-validation-summary="ModelOnly"></div>
                        <div class="form-group">
                            <label asp-for="Title" class="control-label col-md-2"></label>
                            <div class="col-md-10">
                                <input asp-for="Title" class="form-control" />
                                <span asp-validation-for="Title"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="BlogId" class="control-label col-md-2"></label>
                            <div class="col-md-10">
                                <input asp-for="BlogId" class="form-control" />
                                <span asp-validation-for="BlogId"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="CoverName" class="control-label col-md-2"></label>
                            <div class="col-md-10">
                                <input type="file" title="上传封面" name="fileField" id="upload" accept="image/*" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="Category" class="control-label col-md-2"></label>
                            <div class="col-md-10">
                                <select class="select2able" multiple="" name="selectedCategory">
                                    <option value="0">剧集</option>
                                    <option value="1">电影</option>
                                    <option value="2">美剧</option>
                                    <option value="3">韩剧</option>
                                    <option value="4">日剧</option>
                                    <option value="5">动漫</option>
                                    <option value="6">音乐</option>
                                    <option value="7">游戏</option>
                                    <option value="8">图书</option>
                                    <option value="9">综艺</option>
                                    <option value="10">软件</option>
                                    <option value="11">资料</option>
                                    <option value="12">教育</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <button type="submit" class="btn btn-primary"><i class="fa fa-paper-plane"></i>发布推荐</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section scripts{
<script>
    $(function() {
        $('.select2able').select2();
    })
</script>
}
