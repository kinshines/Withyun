@model Withyun.Web.Models.LoginViewModel
@{
    Layout = "~/Views/Shared/_LayoutEmpty.cshtml";
    ViewBag.Title = "登录";
    ViewBag.BodyClass = "login1";
}

    <!-- Login Screen -->
<div class="login-wrapper">
    <div class="login-container">
        <a asp-controller="Home" asp-action="Index">
            <img src="~/images/logo-login@2x.png" />
        </a>
        <form asp-action="Login" asp-controller="Account" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="Email" class = "form-control", placeholder = "邮箱" />
                <span asp-validation-for="Email"></span>
            </div>
            <div class="form-group">
                <input asp-for="Password" class="form-control" , placeholder="密码" />
                <span asp-validation-for="Password"></span>
            </div>
            <div class="form-options clearfix">
                <a asp-action="ForgotPassword" class="pull-right">忘记密码？</a>
            </div>
            <div class="social-login clearfix">
                <button type="submit" class="btn btn-primary">登录</button>
            </div>
        </form>       
        <p class="signup">
           还没有账户？<a asp-action="Register">立即注册</a>
        </p>
    </div>
</div>
<!-- End Login Screen -->

