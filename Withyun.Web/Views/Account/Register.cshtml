@model Withyun.Web.ViewModels.RegisterViewModel
@{
    Layout = "~/Views/Shared/_LayoutEmpty.cshtml";
    ViewBag.Title = "注册";
    ViewBag.BodyClass = "login1 signup";
}

    <!-- Login Screen -->
    <div class="login-wrapper">
        <div class="login-container">
            <a asp-controller="Home" asp-action="Index">
                <img src="~/images/logo-login@2x.png" />
            </a>
            <form asp-action="Register" asp-controller="Account">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <input asp-for="Email" class = "form-control", placeholder = "邮箱" />
                </div>
                <div class="form-group">
                    <input asp-for="UserName" class="form-control" , placeholder="昵称" />
                </div>
                <div class="form-group">
                    <input asp-for="Password" class="form-control" , placeholder="密码" />
                </div>
                <div class="form-options">
                </div>
                <div class="social-login clearfix">
                    <button type="submit" class="btn btn-primary">注册</button>
                </div>
            </form>           
            <p class="signup">
                已有账户？ <a asp-action="Login">立即登录</a>
            </p>
        </div>
    </div>
    <!-- End Login Screen -->
