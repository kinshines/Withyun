@model Domain.Models.Report
<div class="modal fade" id="reportModal">
    <div class="modal-dialog">
        <div class="modal-content">
            @using (Ajax.BeginForm("Create", "Report", null, new AjaxOptions() {OnSuccess = "reportSuccess"}, new {@class = "form-horizontal"}))
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(model => model.BlogId)
                <div class="modal-header">
                    <button aria-hidden="true" class="close" data-dismiss="modal" type="button">&times;</button>
                    <h4 class="modal-title">
                        举报
                    </h4>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label class="control-label col-md-2">举报类型</label>
                        <div class="col-md-1"></div>
                        <div class="col-md-7">
                            @Html.EditorFor(model => model.ReportType, "Enum-radio")
                        </div>
                    </div>
                    <div class="form-group" style="display: none">
                        <div class="col-md-3"></div>
                        <div class="col-md-7">
                            @Html.TextBoxFor(model => model.Content, new { @class = "form-control" })
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-primary" type="submit">提交</button>
                    <button class="btn btn-default-outline" data-dismiss="modal" type="button">返回</button>
                </div>
            }
        </div>
    </div>
</div>

<div class="modal fade" id="reportSuccessModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button aria-hidden="true" class="close" data-dismiss="modal" type="button">&times;</button>
                <h4 class="modal-title">
                    举报成功！
                </h4>
            </div>
            <div class="modal-body">
                <p>您的举报正在等待人工审核，我们会在 24 小时内审核完成</p>
                <p>处理完成后会「私信」通知您</p>
            </div>
            <div class="modal-footer">
                <button class="btn btn-primary" data-dismiss="modal" type="button">知道啦</button>
            </div>
        </div>
    </div>
</div>
