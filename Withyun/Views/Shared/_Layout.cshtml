<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" name="viewport">
    <title>@ViewBag.Title - Withyun</title>
    
    <link href="http://cdn.bootcss.com/bootstrap/3.0.0/css/bootstrap.min.css" rel="stylesheet">
    <link href="http://cdn.bootcss.com/font-awesome/4.5.0/css/font-awesome.min.css" rel="stylesheet">
    <link href="~/Content/se7en-font.css" rel="stylesheet" />
    <link href="http://cdn.bootcss.com/fancybox/2.1.5/jquery.fancybox.min.css" rel="stylesheet">
    <link href="http://cdn.bootcss.com/select2/3.5.2/select2.min.css" rel="stylesheet">
    <link href="http://cdn.bootcss.com/bootstrap-datepicker/1.4.0/css/bootstrap-datepicker.min.css" rel="stylesheet">
    <link href="http://cdn.bootcss.com/summernote/0.8.1/summernote.css" rel="stylesheet">
    @Styles.Render("~/Content/css")
    <script src="~/Scripts/modernizr.custom.js"></script>
</head>
<body class="page-header-fixed">
        <!-- Navigation -->
        <div class="navbar navbar-fixed-top scroll-hide">
            <div class="container-fluid top-bar">
                <div id="top-inner" class="top-warp clearfix">
                    @Html.Action("LoginPartial","Account",true)
                    @Html.ActionLink("WithYun", "Index", "Home", null, new { @class = "logo" })
                    @using (Html.BeginForm("Index", "Blog", FormMethod.Get, new { @class = "navbar-form form-inline col-md-6" }))
                    {
                        <input class="form-control" placeholder="搜索" type="text" name="wd" value="@ViewBag.wd">
                    }
                    <div style="padding-top: 8px">
                        @Html.ActionLink("首页", "Index", "Home", null, new { @class = "btn btn-primary" })
                        @Html.ActionLink("分享", "Edit", "Blog", null, new { @class = "btn btn-success" })
                        @Html.ActionLink("关于", "About", "Home", null, new { @class = "btn btn-info" })
                    </div>
                </div>
            </div>
        </div>
        <!-- End Navigation -->
        <div class="container-fluid main-content">
            @RenderBody()
        </div>

    <script src="http://cdn.bootcss.com/jquery/1.11.3/jquery.min.js"></script>
    <script src="http://cdn.bootcss.com/jqueryui/1.11.3/jquery-ui.min.js"></script>
    <script src="http://cdn.bootcss.com/bootstrap/3.0.0/js/bootstrap.min.js"></script>
    <script src="http://cdn.bootcss.com/jquery-cookie/1.4.1/jquery.cookie.min.js"></script>
    <script src="http://cdn.bootcss.com/jquery-ajax-unobtrusive/3.2.3/jquery.unobtrusive-ajax.min.js"></script>
    <script src="http://cdn.bootcss.com/jquery-validate/1.13.1/jquery.validate.min.js"></script>
    <script src="~/Scripts/messages_zh.js"></script>
    <script src="http://cdn.bootcss.com/jquery-validation-unobtrusive/3.2.6/jquery.validate.unobtrusive.min.js"></script>
    <script src="http://cdn.bootcss.com/raphael/2.1.4/raphael-min.js"></script>
    <script src="http://cdn.bootcss.com/selectivizr/1.0.2/selectivizr-min.js"></script>
    <script src="http://cdn.bootcss.com/fancybox/2.1.5/jquery.fancybox.pack.js"></script>
    <script src="http://cdn.bootcss.com/typeahead.js/0.9.3/typeahead.min.js"></script>
    <script src="http://cdn.bootcss.com/spin.js/2.0.1/spin.min.js"></script>
    <script src="http://cdn.bootcss.com/fitvids/1.1.0/jquery.fitvids.min.js"></script>
    <script src="http://cdn.bootcss.com/select2/3.5.2/select2.min.js"></script>
    <script src="http://cdn.bootcss.com/summernote/0.8.1/summernote.min.js"></script>
    <script src="http://cdn.bootcss.com/summernote/0.8.1/lang/summernote-zh-CN.min.js"></script>
    <script src="http://cdn.bootcss.com/zeroclipboard/2.2.0/ZeroClipboard.min.js"></script>
    <script src="http://cdn.bootcss.com/jquery.lazyload/1.9.1/jquery.lazyload.min.js"></script>
    @Scripts.Render("~/bundles/page")
    <script src="http://cdn.bootcss.com/respond.js/1.4.2/respond.min.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
